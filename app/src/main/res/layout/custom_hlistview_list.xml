<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/border_bottom_gray">

    <TextView
        android:id="@+id/android_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/android_list_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/inner_logo"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/android_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/android_list_image"
        android:text="List Item"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="@color/Blue"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android_list_text"
        android:layout_toRightOf="@+id/android_list_image"
        android:weightSum="7"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/android_list_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textSize="12sp"
            android:textColor="@color/Dimgrey"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:gravity="left"/>

        <TextView
            android:id="@+id/android_list_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Created On"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@color/Dimgrey"
            android:layout_weight="2"
            android:gravity="left"/>

    </LinearLayout>

    <TextView
        android:id="@+id/android_list_details"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/android_list_text"
        android:layout_toRightOf="@+id/android_list_image"
        android:text="Details"
        android:textSize="12sp"
        android:textColor="@color/Dimgrey"
        android:layout_marginTop="25dp"/>

</RelativeLayout>