                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="80 - 100"
                android:textColor="@color/White"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/Trans">
        </LinearLayout>
    </LinearLayout>

